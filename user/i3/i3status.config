general {
    colors = true
    interval = 5
}

order += "disk /"
order += "battery 0"
order += "memory"
order += "tztime local"

battery 0 {
    format = "%status %percentage %emptytime"
    format_down = "No battery"
    status_chr = "âš¡"
    status_bat = "ðŸ”‹"
    status_unk = "?"
    status_full = "â˜»"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
}

tztime local {
    format = "%d-%m-%Y %H:%M:%S|"
}

memory {
    format = "%used"
    threshold_degraded = "10%"
    format_degraded = "MEMORY: %free"
}

disk "/" {
    format = "|%avail/%total"
}

